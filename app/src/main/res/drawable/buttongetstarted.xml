<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set rounded corners -->
    <corners android:radius="16dp" /> <!-- Adjust the radius for roundness -->

    <!-- Set a solid blue color -->
    <solid android:color="#19297C" /> <!-- Ensure this color is defined in colors.xml -->

    <!-- Optional: Padding inside the button -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
