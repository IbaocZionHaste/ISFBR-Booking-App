<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/bottom_nav_item_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Underline for the selected item -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:gravity="bottom|center_horizontal"> <!-- Center the underline -->
                <shape android:shape="rectangle">
                    <size
                        android:width="53dp"
                        android:height="5dp" />
                    <solid android:color="@color/light_blue" /><!-- Color of the underline -->
                    <corners android:radius="450dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Background for unselected items (no underline) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>

