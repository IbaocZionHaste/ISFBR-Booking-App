<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/bottom_nav_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background layer (White) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background color -->
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- Gray border around all edges (for neumorphism) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Light gray for the border -->
            <corners android:radius="15dp" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

    <!-- Inner shadow effect to create depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#33000000"
            android:endColor="#00FFFFFF"
            android:angle="270" />
            <corners android:radius="15dp" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

    <!-- Inner background layer -->
    <item android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5" /> <!-- Light gray for inner background -->
            <corners android:radius="15dp" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

</layer-list>



