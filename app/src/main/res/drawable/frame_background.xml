<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#B3000000"/> <!-- Color of the drop shadow -->
            <corners android:radius="4dp"/> <!-- Rounded corners, adjust as needed -->
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Inner content background color -->
            <corners android:radius="4dp"/> <!-- Rounded corners, adjust as needed -->
        </shape>
    </item>
</layer-list>
