<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    android:backgroundTint="@color/whiteSmoke"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvSubmissionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your booking has been submitted successfully"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tvSubmissionMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please be informed of your booking progress in the booking status"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <Button
            android:id="@+id/Submission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:backgroundTint="@color/light_blue"
            android:textColor="@android:color/white"
            android:layout_gravity="center" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
